<%
  team_players = game.players.joins(:game_data).where(game_data: { team: team })
%>
<table class="table table-hover" id="team_<%=team%>_players_table">
  <tr>
    <th>Nome</th>
    <th style="text-align: center">G.</th>
    <th style="text-align: center">A.</th>
    <th style="text-align: center">D.</th>
    <th style="text-align: center">MVP</th>
    <th></th>
  </tr>
  <% team_players.each do |player| %>
    <tr>
      <td align="left" class="player-name">
        <img src="<%= player.picture %>" class="img img-fluid" style="width: 20px">
        <%= link_to (player.nickname || player.name), group_player_path(player.group, player) %>
      </td>
      <td align="center">-</td>
      <td align="center">-</td>
      <td align="center">-</td>
      <td align="center">-</td>
      <td>
        <%= button_tag (bootstrap_icon 'x-lg', style: 'height: 18px;width: auto;top: -2px;position: relative;'), class: '', style: 'border:none; background: none; color: red', data: {'group-id': game.group.id, 'game-id': game.id, 'player-id': player.id, controller: 'game', action: 'click->game#removePlayer'} %>
        <% if team == :a %>
          <%= button_tag (bootstrap_icon 'arrow-left-right', style: 'height: 18px;width: auto;top: -2px;position: relative;'), class: '', style: 'border:none; background: none; color: green', data: {'group-id': game.group.id, 'game-id': game.id, 'player-id': player.id, team: 'b', controller: 'game', action: 'click->game#setPlayerTeam'} %>
        <% else %>
          <%= button_tag (bootstrap_icon 'arrow-left-right', style: 'height: 18px;width: auto;top: -2px;position: relative;'), class: '', style: 'border:none; background: none; color: blue', data: {'group-id': game.group.id, 'game-id': game.id, 'player-id': player.id, team: 'a', controller: 'game', action: 'click->game#setPlayerTeam'} %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>