<div id="<%= dom_id @group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= group.notes %>
  </p>

  <p>
    <strong>Participantes:</strong>
    <%= group.players.count %>
  </p>

  <table border="1">
    <tr>
      <th>Nome</th>
      <th>Apelido</th>
      <th>Actions</th>
    </tr>
    <% @group.players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.nickname %></td>
        <td>
          <%= link_to 'Show', group_player_path(@group, player) %>
        </td>
      </tr>
    <% end %>
  </table>

  <table border="1">
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Place</th>
      <th>Players</th>
      <th>Actions</th>
    </tr>
    <% @group.games.each do |game| %>
      <tr>
        <td><%= game.date.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= game.title %></td>
        <td><%= game.place.name %></td>
        <td><%= game.players.count %></td>
        <td>
          <%= link_to 'Show', group_game_path(@group, game) %>
        </td>
      </tr>
    <% end %>
  </table>

</div>
